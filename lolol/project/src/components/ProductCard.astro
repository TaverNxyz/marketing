---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  amazonUrl: string;
  price?: string;
  rating?: number;
}

const { title, description, imageUrl, amazonUrl, price, rating } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <div class="aspect-w-16 aspect-h-9">
    <img src={imageUrl} alt={title} class="w-full h-64 object-cover" />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-semibold text-primary-800 mb-2">{title}</h3>
    {price && <p class="text-lg font-bold text-accent mb-2">{price}</p>}
    {rating && (
      <div class="flex items-center mb-2">
        {[...Array(5)].map((_, i) => (
          <svg
            class={`w-5 h-5 ${i < rating ? 'text-accent' : 'text-primary-200'}`}
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
    )}
    <p class="text-primary-600 mb-4">{description}</p>
    <a
      href={amazonUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="block w-full bg-accent text-center py-2 px-4 rounded-md text-white font-semibold hover:bg-accent-hover transition-colors"
    >
      View on Amazon
    </a>
  </div>
</div>